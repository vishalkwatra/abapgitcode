sap.ui.define([], function () {                                                                                                                                                                                                                                
	"use strict";                                                                                                                                                                                                                                                 
                                                                                                                                                                                                                                                               
	let oCurrencyFormatter = new sap.ui.model.type.Currency({                                                                                                                                                                                                     
		showMeasure: false                                                                                                                                                                                                                                           
	});                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
	return {                                                                                                                                                                                                                                                      
                                                                                                                                                                                                                                                               
		/**                                                                                                                                                                                                                                                          
		 * Rounds the number unit value to 2 digits                                                                                                                                                                                                                  
		 * @public                                                                                                                                                                                                                                                   
		 * @param {string} sValue the number string to be rounded                                                                                                                                                                                                    
		 * @returns {string} sValue with 2 digits rounded                                                                                                                                                                                                            
		 */                                                                                                                                                                                                                                                          
		numberUnit: function (sValue) {                                                                                                                                                                                                                              
			if (!sValue) {                                                                                                                                                                                                                                              
				return "";                                                                                                                                                                                                                                                 
			}                                                                                                                                                                                                                                                           
			return parseFloat(sValue).toFixed(2);                                                                                                                                                                                                                       
		},                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
		convertStringToInt: function (sValue) {                                                                                                                                                                                                                      
			if (!sValue) {                                                                                                                                                                                                                                              
				return "";                                                                                                                                                                                                                                                 
			}                                                                                                                                                                                                                                                           
			let iValue = parseInt(sValue, [10]);                                                                                                                                                                                                                        
			return iValue !== 0 ? iValue : "";                                                                                                                                                                                                                          
		},                                                                                                                                                                                                                                                           
		setCurrencyAndUnit: function (amount, currency) {                                                                                                                                                                                                            
			if (amount) {                                                                                                                                                                                                                                               
				return oCurrencyFormatter.formatValue([amount, currency], "string").concat(" ", currency);                                                                                                                                                                 
			}                                                                                                                                                                                                                                                           
			return "";                                                                                                                                                                                                                                                  
		}                                                                                                                                                                                                                                                            
	};                                                                                                                                                                                                                                                            
                                                                                                                                                                                                                                                               
});                                                                                                                                                                                                                                                            