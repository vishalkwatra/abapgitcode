sap.ui.define([                                                                                                                                                                                                                                                
	"sap/ui/core/format/NumberFormat"                                                                                                                                                                                                                             
], function (NumberFormat) {                                                                                                                                                                                                                                   
	"use strict";                                                                                                                                                                                                                                                 
                                                                                                                                                                                                                                                               
	// "asd34", "345 % ", "345 "                                                                                                                                                                                                                                  
                                                                                                                                                                                                                                                               
	return {                                                                                                                                                                                                                                                      
		appendPercentageSign: function (sValue) {                                                                                                                                                                                                                    
			let sTempValue;                                                                                                                                                                                                                                             
			if (sValue) {                                                                                                                                                                                                                                               
				sTempValue = sValue.replaceAll(/[^0-9.-]/gi, "");                                                                                                                                                                                                          
			} else {                                                                                                                                                                                                                                                    
				sTempValue = sValue;                                                                                                                                                                                                                                       
			}                                                                                                                                                                                                                                                           
			if (!sTempValue) {                                                                                                                                                                                                                                          
				return "";                                                                                                                                                                                                                                                 
			} else {                                                                                                                                                                                                                                                    
				return parseFloat(sTempValue, [10]).toFixed(2) + " %";                                                                                                                                                                                                     
                                                                                                                                                                                                                                                               
			}                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
		},                                                                                                                                                                                                                                                           
		removeLeadingZero: function (sValue) {                                                                                                                                                                                                                       
			if (!sValue) {                                                                                                                                                                                                                                              
				return "0";                                                                                                                                                                                                                                                
			}                                                                                                                                                                                                                                                           
			return parseInt(sValue);                                                                                                                                                                                                                                    
		},                                                                                                                                                                                                                                                           
		formatTierAmountDisplayAndEdit: function (sValue, bEditable, sCurrency) {                                                                                                                                                                                    
			let sTempValue;                                                                                                                                                                                                                                             
			if (sValue) {                                                                                                                                                                                                                                               
				sTempValue = sValue.replaceAll(/[^0-9.-]/gi, "");                                                                                                                                                                                                          
			} else {                                                                                                                                                                                                                                                    
				sTempValue = sValue;                                                                                                                                                                                                                                       
			}                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
			if (!sTempValue) {                                                                                                                                                                                                                                          
				return "";                                                                                                                                                                                                                                                 
			} else if (!bEditable) { // Display Mode - Display value in Number format                                                                                                                                                                                   
				return NumberFormat.getFloatInstance({                                                                                                                                                                                                                     
					maxFractionDigits: 2                                                                                                                                                                                                                                      
				}).format(sTempValue) + " " + sCurrency;                                                                                                                                                                                                                   
			} else { // Editable Mode - Show value without number fomat&nbsp;                                                                                                                                                                                           
				return parseFloat(sTempValue, [10]).toFixed(2) + " " + sCurrency;                                                                                                                                                                                          
                                                                                                                                                                                                                                                               
			}                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
			//////////////////////////////////////////////                                                                                                                                                                                                              
                                                                                                                                                                                                                                                               
			//                                                                                                                                                                                                                                                          
                                                                                                                                                                                                                                                               
			// if (isNaN(sValue)) {                                                                                                                                                                                                                                     
			// 	if (sValue.indexOf(" GBP") !== -1) {                                                                                                                                                                                                                    
			// 		sValue = sValue.replaceAll("GBP", "");                                                                                                                                                                                                                 
			// 	} else {                                                                                                                                                                                                                                                
			// 		sValue = "0.00";                                                                                                                                                                                                                                       
			// 	}                                                                                                                                                                                                                                                       
			// }                                                                                                                                                                                                                                                        
                                                                                                                                                                                                                                                               
			// 	if (isNaN(sValue) && sValue.indexOf(" GBP")) {                                                                                                                                                                                                          
			// 	sValue = sValue.replaceAll("GBP", "");                                                                                                                                                                                                                  
			// 	//return parseFloat(sValue).toFixed(2) + " GBP";                                                                                                                                                                                                        
			// }                                                                                                                                                                                                                                                        
			// else if (!isNaN(sValue)) {                                                                                                                                                                                                                               
			// 	sValue = sValue;                                                                                                                                                                                                                                        
			// 	//	return parseFloat(sValue).toFixed(2) + " GBP";                                                                                                                                                                                                       
			// }                                                                                                                                                                                                                                                        
                                                                                                                                                                                                                                                               
			///////////////////////////////////////////////                                                                                                                                                                                                             
                                                                                                                                                                                                                                                               
			// if (!sValue || isNaN(sValue)) {                                                                                                                                                                                                                          
			// 	return "0.00" + " GBP";                                                                                                                                                                                                                                 
			// }                                                                                                                                                                                                                                                        
			// if (bEditable) { // Editable Mode - Show value without number fomat                                                                                                                                                                                      
			// 	return parseFloat(sValue, [10]).toFixed(2) + " GBP";                                                                                                                                                                                                    
			// } else { // Display Mode - Display value in Number format                                                                                                                                                                                                
			// 	return NumberFormat.getFloatInstance({                                                                                                                                                                                                                  
			// 		maxFractionDigits: 2                                                                                                                                                                                                                                   
			// 	}).format(sValue) + " GBP";                                                                                                                                                                                                                             
			// }                                                                                                                                                                                                                                                        
		},                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
		addDescription: function (sValue) {                                                                                                                                                                                                                          
			if (sValue) {                                                                                                                                                                                                                                               
				return "(" + sValue + ")";                                                                                                                                                                                                                                 
			} else {                                                                                                                                                                                                                                                    
				return "";                                                                                                                                                                                                                                                 
			}                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
		}                                                                                                                                                                                                                                                            
                                                                                                                                                                                                                                                               
	};                                                                                                                                                                                                                                                            
                                                                                                                                                                                                                                                               
});                                                                                                                                                                                                                                                            