<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout">                                                                                                                                                                  
	<Dialog id="idPerDialog" showHeader="false" contentWidth="470px" contentHeight="150px">                                                                                                                                                                       
		<customHeader>                                                                                                                                                                                                                                               
			<Bar>                                                                                                                                                                                                                                                       
				<contentLeft>                                                                                                                                                                                                                                              
					<Title id="idTitleDialg" text="{i18n>IntentionMapping}"/>                                                                                                                                                                                                 
				</contentLeft>                                                                                                                                                                                                                                             
				<contentRight>                                                                                                                                                                                                                                             
					<Button icon="sap-icon://decline" press="onPressClosePeriodDialog"/>                                                                                                                                                                                      
				</contentRight>                                                                                                                                                                                                                                            
			</Bar>                                                                                                                                                                                                                                                      
		</customHeader>                                                                                                                                                                                                                                              
		<content>                                                                                                                                                                                                                                                    
			<layout:VerticalLayout>                                                                                                                                                                                                                                     
				<MessageStrip id="errorMsgStripPerId" type="Error" showIcon="true" showCloseButton="true" class="sapUiMediumMarginBottom" visible="false"></MessageStrip>                                                                                                  
				<layout:HorizontalLayout>                                                                                                                                                                                                                                  
					<layout:VerticalLayout class="sapUiMediumMargin">                                                                                                                                                                                                         
						<Label text="{i18n>labelIntention}" textAlign="Right" class="sapUiTinyMarginBegin"/>                                                                                                                                                                     
						<Input value="{oPerRowModel>/IntentionDescription}" editable="false" class="sapUiTinyMargin"></Input>                                                                                                                                                    
					</layout:VerticalLayout>                                                                                                                                                                                                                                  
					<layout:VerticalLayout class="sapUiMediumMarginTop">                                                                                                                                                                                                      
						<Label text="{i18n>labelPeriodTo}" textAlign="Right" class="sapUiTinyMarginBegin"/>                                                                                                                                                                      
						<Input class="sapUiTinyMargin" id="IdPerTo" editable="true" width="44%" value="{oPerRowModel>/PeriodTo}" change="onChangeFisclPeriodTo"/>                                                                                                                
					</layout:VerticalLayout>                                                                                                                                                                                                                                  
				</layout:HorizontalLayout>                                                                                                                                                                                                                                 
			</layout:VerticalLayout>                                                                                                                                                                                                                                    
		</content>                                                                                                                                                                                                                                                   
		<beginButton>                                                                                                                                                                                                                                                
			<Button id="idOkBtnPer" text="{i18n>updateIntentBtnText}" type="Emphasized" press="onPressSaveBtnPeriod"/>                                                                                                                                                  
		</beginButton>                                                                                                                                                                                                                                               
		<endButton>                                                                                                                                                                                                                                                  
			<Button id="idCloseBtnPer" text="{i18n>cancelIntentBtnText}" press="onPressClosePeriodDialog"/>                                                                                                                                                             
		</endButton>                                                                                                                                                                                                                                                 
	</Dialog>                                                                                                                                                                                                                                                     
</core:FragmentDefinition>                                                                                                                                                                                                                                     