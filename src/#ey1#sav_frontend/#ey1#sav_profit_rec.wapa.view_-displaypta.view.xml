<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.f" xmlns:layout="sap.ui.layout"                                                                                                                                      
	xmlns:smartTable="sap.ui.comp.smarttable" xmlns:table="sap.ui.table" xmlns:smartfield="sap.ui.comp.smartfield"                                                                                                                                                
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"                                                                                                                                                                           
	controllerName="ey.sap.fin.cs.profitrecon.controller.DisplayPTA" xmlns:html="http://www.w3.org/1999/xhtml">                                                                                                                                                   
	<f:DynamicPage id="idPagePostPTAEntries" headerExpanded="true" showFooter="true">                                                                                                                                                                             
		<f:title>                                                                                                                                                                                                                                                    
			<f:DynamicPageTitle id="idPagePostPTAEntriesHeader">                                                                                                                                                                                                        
				<f:heading>                                                                                                                                                                                                                                                
					<Title id="idPostPTAEntriesPageHeader"                                                                                                                                                                                                                    
						text="{= ${postPTAHeaderModel>/DocumentNumber} ? ${i18n>ptaEntryDisplayPageTitle} : ${i18n>postPtaEntriesPageTitle}}"/>                                                                                                                                  
				</f:heading>                                                                                                                                                                                                                                               
			</f:DynamicPageTitle>                                                                                                                                                                                                                                       
		</f:title>                                                                                                                                                                                                                                                   
		<f:header>                                                                                                                                                                                                                                                   
			<f:DynamicPageHeader pinnable="true">                                                                                                                                                                                                                       
				<layout:HorizontalLayout id="idHLayoutPTAEntries" allowWrapping="true">                                                                                                                                                                                    
					<layout:VerticalLayout id="idSubheadingFieldsDocNo" visible="{= ${postPTAHeaderModel>/DocumentNumber} ? true : false}"                                                                                                                                    
						class="sapUiMediumMarginEnd sapUiSmallMarginBottom">                                                                                                                                                                                                     
						<Title id="idDocNoLabelPTAEntries" text="{i18n>labelDocumentNumber}" class="sapUiTinyMarginEnd sapUiTinyMarginBottom"/>                                                                                                                                  
						<ObjectStatus id="idDocNoTextPTAEntries" text="{postPTAHeaderModel>/DocumentNumber}" class="sapMObjectStatusLarge"/>                                                                                                                                     
					</layout:VerticalLayout>                                                                                                                                                                                                                                  
					<layout:VerticalLayout id="idSubheadingFieldsConsdn" class="sapUiMediumMarginEnd sapUiSmallMarginBottom">                                                                                                                                                 
						<layout:HorizontalLayout id="idSubheadingFieldsConsdnUnitPTA" class="sapUiTinyMarginBottom">                                                                                                                                                             
							<Label id="idCnsldtnUnitLabelPTAEntries" text="{i18n>labelConsldnUnit}" class="sapUiTinyMarginEnd"/>                                                                                                                                                    
							<Text id="idCnsldtnUnitTextPTAEntries" text="{postPTAHeaderModel>/ConsolidationUnit}"/>                                                                                                                                                                 
						</layout:HorizontalLayout>                                                                                                                                                                                                                               
						<layout:HorizontalLayout id="idSubheadingFieldsConsdnUnitDescPTA">                                                                                                                                                                                       
							<Label id="idCnsldtnUnitDescLabelPTAEntries" text="{i18n>labelConsldnUnitDesc}" class="sapUiTinyMarginEnd"/>                                                                                                                                            
							<Text id="idCnsldtnUnitTextDescPTAEntries" text="{postPTAHeaderModel>/ConsolidationUnitDescription}"/>                                                                                                                                                  
						</layout:HorizontalLayout>                                                                                                                                                                                                                               
					</layout:VerticalLayout>                                                                                                                                                                                                                                  
					<layout:VerticalLayout id="idSubheadingFieldsCurrency" class="sapUiMediumMarginEnd sapUiSmallMarginBottom">                                                                                                                                               
						<layout:HorizontalLayout id="idSubheadingFieldsLCPTA" class="sapUiTinyMarginBottom">                                                                                                                                                                     
							<Label id="idLocalCurrLabelPTAEntries" text="{i18n>localCurrencyLabel}" class="sapUiTinyMarginEnd"/>                                                                                                                                                    
							<Text id="idLocalCurrTextPTAEntries" text="{postPTAHeaderModel>/LocalCurrency}"/>                                                                                                                                                                       
						</layout:HorizontalLayout>                                                                                                                                                                                                                               
						<layout:HorizontalLayout id="idSubheadingFieldsGCPTA">                                                                                                                                                                                                   
							<Label id="idGroupCurrLabelPTAEntries" text="{i18n>groupCurrencyLabel}" class="sapUiTinyMarginEnd"/>                                                                                                                                                    
							<Text id="idGroupCurrTextPTAEntries" text="{postPTAHeaderModel>/GroupCurrency}"/>                                                                                                                                                                       
						</layout:HorizontalLayout>                                                                                                                                                                                                                               
					</layout:VerticalLayout>                                                                                                                                                                                                                                  
					<layout:HorizontalLayout id="idSubheadingFieldsPostingDateAndPeriod" class="sapUiMediumMarginEnd sapUiSmallMarginBottom"                                                                                                                                  
						visible="{= ${postPTAHeaderModel>/DocumentNumber} ? false : true}">                                                                                                                                                                                      
						<layout:VerticalLayout id="idSubheadingFieldsPostingDate" class="sapUiMediumMarginEnd">                                                                                                                                                                  
							<Label id="idPostingDateLabelPTAEntries" text="{i18n>postingDateLabel}" required="true"/>                                                                                                                                                               
							<DatePicker id="idPostingDatePickerPTAEntries" displayFormat="dd.MM.yyyy"                                                                                                                                                                               
								value="{path: 'postPTAHeaderModel>/PostingDate', formatter: '.formatter.setDateFormatToDDMMYYYY' }" change="onChangePostingDatePTA"/>                                                                                                                  
						</layout:VerticalLayout>                                                                                                                                                                                                                                 
						<layout:VerticalLayout id="idSubheadingFieldsPostingPeriod" class="sapUiMediumMarginEnd">                                                                                                                                                                
							<Label id="idPostingPeriodLabelPTAEntries" text="{i18n>postingPeriodLabel}"/>                                                                                                                                                                           
							<Input id="idPostingPeriodInputPTAEntries" type="Number" editable="{= ${postPTAHeaderModel>/FiscalPeriod} >= '12' ? true : false}"                                                                                                                      
								value="{postPTAHeaderModel>/FiscalPeriod}" change="onChangePostingPeriodPTAEntries"                                                                                                                                                                    
								valueState="{= ${postPTAHeaderModel>/FiscalPeriod} > 17 ? 'Error' : 'None'}"/>                                                                                                                                                                         
						</layout:VerticalLayout>                                                                                                                                                                                                                                 
					</layout:HorizontalLayout>                                                                                                                                                                                                                                
					<layout:VerticalLayout id="idSubheadingFieldsPostingDateAndPeriodDisplay" class="sapUiSmallMarginBottom"                                                                                                                                                  
						visible="{= ${postPTAHeaderModel>/DocumentNumber} ? true : false}">                                                                                                                                                                                      
						<layout:HorizontalLayout id="idSubheadingFieldsPostingDateDisplay" class="sapUiTinyMarginBottom">                                                                                                                                                        
							<Label id="idPostingDateLabelPTAEntriesDisplay" text="{i18n>postingDateLabel}" class="sapUiTinyMarginEnd"/>                                                                                                                                             
							<Text id="idPostingDateTextPTAEntriesDisplay"                                                                                                                                                                                                           
								text="{path: 'postPTAHeaderModel>/PostingDateDisplay', formatter: '.formatter.setDateFormatToDDMMYYYY' }"/>                                                                                                                                            
							<!--<Text id="idPostingDateTextPTAEntriesDisplay"-->                                                                                                                                                                                                    
							<!--	text="{ path: 'postPTAHeaderModel>/PostingDateDisplay', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd.MM.yyyy' } }"/>	-->                                                                                                          
						</layout:HorizontalLayout>                                                                                                                                                                                                                               
						<layout:HorizontalLayout id="idSubheadingFieldsPostingPeriodDisplay">                                                                                                                                                                                    
							<Label id="idPostingPeriodLabelPTAEntriesDisplay" text="{i18n>postingPeriodLabel}" class="sapUiTinyMarginEnd"/>                                                                                                                                         
							<Text id="idPostingPeriodTextPTAEntriesDisplay" text="{postPTAHeaderModel>/FiscalPeriod}"/>                                                                                                                                                             
						</layout:HorizontalLayout>                                                                                                                                                                                                                               
					</layout:VerticalLayout>                                                                                                                                                                                                                                  
				</layout:HorizontalLayout>                                                                                                                                                                                                                                 
			</f:DynamicPageHeader>                                                                                                                                                                                                                                      
		</f:header>                                                                                                                                                                                                                                                  
		<f:content></f:content>                                                                                                                                                                                                                                      
		<f:footer>                                                                                                                                                                                                                                                   
			<OverflowToolbar id="idOverflowToolbar" visible="{= ${postPTAHeaderModel>/DocumentNumber} ? false : true}">                                                                                                                                                 
				<ToolbarSpacer id="idToolbarSpacerFooter"/>                                                                                                                                                                                                                
				<Button id="idToolbarSaveBtn" text="{i18n>post}" type="Emphasized" press="onPressPostBtnPostPTAEntries"/>                                                                                                                                                  
				<Button id="idToolbarCancelBtn" text="{i18n>cancel}" press="onPressCancelBtnPostPTAEntries"/>                                                                                                                                                              
			</OverflowToolbar>                                                                                                                                                                                                                                          
		</f:footer>                                                                                                                                                                                                                                                  
	</f:DynamicPage>                                                                                                                                                                                                                                              
</mvc:View>                                                                                                                                                                                                                                                    