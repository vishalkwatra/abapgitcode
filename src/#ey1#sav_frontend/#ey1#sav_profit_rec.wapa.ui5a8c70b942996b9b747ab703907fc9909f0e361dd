sap.ui.define(["sap/ui/core/format/NumberFormat"], function (NumberFormat) {                                                                                                                                                                                   
	"use strict";                                                                                                                                                                                                                                                 
	                                                                                                                                                                                                                                                              
	let oCurrencyFormatter = new sap.ui.model.type.Currency({                                                                                                                                                                                                     
		showMeasure: false                                                                                                                                                                                                                                           
	});                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
	return {                                                                                                                                                                                                                                                      
                                                                                                                                                                                                                                                               
		/**                                                                                                                                                                                                                                                          
		 * Rounds the number unit value to 2 digits                                                                                                                                                                                                                  
		 * @public                                                                                                                                                                                                                                                   
		 * @param {string} sValue the number string to be rounded                                                                                                                                                                                                    
		 * @returns {string} sValue with 2 digits rounded                                                                                                                                                                                                            
		 */                                                                                                                                                                                                                                                          
		numberUnit: function (sValue) {                                                                                                                                                                                                                              
			if (!sValue) {                                                                                                                                                                                                                                              
				return "";                                                                                                                                                                                                                                                 
			}                                                                                                                                                                                                                                                           
			return parseFloat(sValue).toFixed(2);                                                                                                                                                                                                                       
		},                                                                                                                                                                                                                                                           
		removeLeadingZero: function (sValue) {                                                                                                                                                                                                                       
			if (!sValue) {                                                                                                                                                                                                                                              
				return "0";                                                                                                                                                                                                                                                
			}                                                                                                                                                                                                                                                           
			return parseInt(sValue, [10]);                                                                                                                                                                                                                              
		},                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
		convertStringToInt: function (sValue) {                                                                                                                                                                                                                      
			if (!sValue) {                                                                                                                                                                                                                                              
				return "";                                                                                                                                                                                                                                                 
			}                                                                                                                                                                                                                                                           
			let iValue = parseInt(sValue, [10]);                                                                                                                                                                                                                        
			return iValue !== 0 ? iValue : "";                                                                                                                                                                                                                          
		},                                                                                                                                                                                                                                                           
		                                                                                                                                                                                                                                                             
		setCurrencyAndUnit: function (amount, currency) {                                                                                                                                                                                                            
			if (amount) {                                                                                                                                                                                                                                               
				return oCurrencyFormatter.formatValue([amount, currency], "string").concat(" ", currency);                                                                                                                                                                 
			}                                                                                                                                                                                                                                                           
			return "";                                                                                                                                                                                                                                                  
		},                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
		formatTierAmount: function (sCurrencyType, sAmountInLC, sAmountInGC) {                                                                                                                                                                                       
			let sValue = sCurrencyType === "Local" ? sAmountInLC : sAmountInGC;                                                                                                                                                                                         
                                                                                                                                                                                                                                                               
			if (parseFloat(sValue, [10]) === 0) {                                                                                                                                                                                                                       
				return "";                                                                                                                                                                                                                                                 
			}                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
			let oNumberFormat = sap.ui.core.format.NumberFormat.getCurrencyInstance({                                                                                                                                                                                   
				minIntegerDigits: 1,                                                                                                                                                                                                                                       
				minFractionDigits: 2,                                                                                                                                                                                                                                      
				maxFractionDigits: 2,                                                                                                                                                                                                                                      
				roundingMode: 'CEILING',                                                                                                                                                                                                                                   
				groupingEnabled: true,                                                                                                                                                                                                                                     
				groupingSeparator: ",",                                                                                                                                                                                                                                    
				decimalSeparator: "."                                                                                                                                                                                                                                      
			});                                                                                                                                                                                                                                                         
			return (oNumberFormat.format(sValue));                                                                                                                                                                                                                      
                                                                                                                                                                                                                                                               
		}                                                                                                                                                                                                                                                            
                                                                                                                                                                                                                                                               
	};                                                                                                                                                                                                                                                            
                                                                                                                                                                                                                                                               
});                                                                                                                                                                                                                                                            