<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">                                                                                                                                                                                               
	<Table id="idPostPTAEntriesTableDisplay" mode="None" items="{ path : 'postPTATableDisplayModel>/results', sorter : { path : 'GLAccount' } }">                                                                                                                 
		<headerToolbar>                                                                                                                                                                                                                                              
			<Toolbar id="idPostPTAEntriesTableToolbarDisplay">                                                                                                                                                                                                          
				<Title id="idPostPTAEntriesTableTitleDisplay" text="{i18n>selectedAccountsText}" level="H2"/>                                                                                                                                                              
				<ToolbarSpacer id="idPostPTAEntriesTableToolbarSpacerDisplay"/>                                                                                                                                                                                            
				<SearchField id="idPostPTAEntriesTableToolbarSearchFieldDisplay" liveChange="onSearchPostPTAEntriesTableDisplay" width="20%"/>                                                                                                                             
			</Toolbar>                                                                                                                                                                                                                                                  
		</headerToolbar>                                                                                                                                                                                                                                             
		<columns>                                                                                                                                                                                                                                                    
			<Column id="idPostPTAEntriesTableColHeadingLineItemDisplay" hAlign="Begin" width="4em">                                                                                                                                                                     
				<Text id="idPostPTAEntriesTableTextLineItemDisplay" text="{i18n>colHeadingPTATableLineItem}"/>                                                                                                                                                             
			</Column>                                                                                                                                                                                                                                                   
			<Column id="idPostPTAEntriesTableColHeadingAccountDisplay" hAlign="Begin" width="7em">                                                                                                                                                                      
				<Text id="idPostPTAEntriesTableTextAccountDisplay" text="{i18n>colHeadingPTATableAccount}"/>                                                                                                                                                               
			</Column>                                                                                                                                                                                                                                                   
			<Column id="idPostPTAEntriesTableColHeadingAccDescDisplay" hAlign="Begin" minScreenWidth="Small" demandPopin="true">                                                                                                                                        
				<Text id="idPostPTAEntriesTableTextAccDescDisplay" text="{i18n>colHeadingPTATableAccountDescription}"/>                                                                                                                                                    
			</Column>                                                                                                                                                                                                                                                   
			<Column id="idPostPTAEntriesTableColHeadingFSItemDisplay" hAlign="End" width="7em">                                                                                                                                                                         
				<Text id="idPostPTAEntriesTableTextFSItemDisplay" text="{i18n>colHeadingPTATableFSItem}"/>                                                                                                                                                                 
			</Column>                                                                                                                                                                                                                                                   
			<Column id="idPostPTAEntriesTableColHeadingFSItemDescDisplay" hAlign="Begin" minScreenWidth="Small" demandPopin="true">                                                                                                                                     
				<Text id="idPostPTAEntriesTableTextFSItemDescDisplay" text="{i18n>colHeadingPTATableFSItemDesc}"/>                                                                                                                                                         
			</Column>                                                                                                                                                                                                                                                   
			<Column id="idPostPTAEntriesTableColHeadingLocalPTADisplay" hAlign="End">                                                                                                                                                                                   
				<Text id="idPostPTAEntriesTableTextLocalPTADisplay" text="{i18n>colHeadingPTATableNewPTALC}"/>                                                                                                                                                             
			</Column>                                                                                                                                                                                                                                                   
			<Column id="idPostPTAEntriesTableColHeadingGroupPTADisplay" hAlign="End">                                                                                                                                                                                   
				<Text id="idPostPTAEntriesTableTextGroupPTADisplay" text="{i18n>colHeadingPTATableNewPTAGC}"/>                                                                                                                                                             
			</Column>                                                                                                                                                                                                                                                   
			<Column id="idPostPTAEntriesTableColHeadingCommentsTextDisplay" hAlign="Begin" demandPopin="true">                                                                                                                                                          
				<Text id="idPostPTAEntriesTableTextCommentsDisplay" text="{i18n>colHeadingPTATableCommentsText}"/>                                                                                                                                                         
			</Column>                                                                                                                                                                                                                                                   
		</columns>                                                                                                                                                                                                                                                   
		<items>                                                                                                                                                                                                                                                      
			<ColumnListItem id="idPostPTAEntriesColumnListItemsDisplay">                                                                                                                                                                                                
				<cells>                                                                                                                                                                                                                                                    
					<Text id="idPostPTAEntriesCellLineItemTextDisplay" text="{postPTATableDisplayModel>LineItem}"/>                                                                                                                                                           
					<Text id="idPostPTAEntriesCellAccountTextDisplay" text="{postPTATableDisplayModel>GLAccount}"/>                                                                                                                                                           
					<Text id="idPostPTAEntriesCellAccountDescTextDisplay" text="{postPTATableDisplayModel>GLAccountMdmText}"/>                                                                                                                                                
					<Text id="idPostPTAEntriesCellFSItemTextDisplay" text="{postPTATableDisplayModel>FinancialStatementItem}"/>                                                                                                                                               
					<Text id="idPostPTAEntriesCellFSItemDescTextDisplay" text="{postPTATableDisplayModel>ConsolidationRptgItemMdmText}"/>                                                                                                                                     
					<Text id="idPostPTAEntriesCellNewPTALCTextDisplay"                                                                                                                                                                                                        
						text="{parts : [{path:'postPTATableDisplayModel>AmountInLocalCurrency'}, {path:'postPTATableDisplayModel>LocalCurrency'}],type: 'sap.ui.model.type.Currency',formatOptions:{showMeasure: false}}"/>                                                      
					<Text id="idPostPTAEntriesCellNewPTAGCTextDisplay"                                                                                                                                                                                                        
						text="{parts : [{path:'postPTATableDisplayModel>AmountInGroupCurrency'}, {path:'postPTATableDisplayModel>GroupCurrency'}],type: 'sap.ui.model.type.Currency',formatOptions:{showMeasure: false}}"/>                                                      
					<Text id="idPostPTAEntriesCellTextCommentsTextDisplay" text="{postPTATableDisplayModel>Text}"/>                                                                                                                                                           
				</cells>                                                                                                                                                                                                                                                   
			</ColumnListItem>                                                                                                                                                                                                                                           
		</items>                                                                                                                                                                                                                                                     
	</Table>                                                                                                                                                                                                                                                      
</core:FragmentDefinition>                                                                                                                                                                                                                                     